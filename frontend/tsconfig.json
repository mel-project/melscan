{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"baseUrl": "./src",
		"paths": {
			"@utils/*": ["utils/*"],
			"@components/*": ["components/*"]
		},
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"ambient.d.ts",
		"./types/**/$types.d.ts",
		"../vite.config.ts",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte",
		"../src/**/*.js",
		"../src/**/*.ts",
		"../src/**/*.svelte",
		"../tests/**/*.js",
		"../tests/**/*.ts",
		"../tests/**/*.svelte"
	],
	"target": "es2017",
	"module": "commonjs",
	"lib": ["es2020"],
	"transform": "typescript-is/lib/transform-inline/transformer"
}
